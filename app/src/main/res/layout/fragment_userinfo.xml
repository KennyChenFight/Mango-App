<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryGray"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <!-- navbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryWhite"
        android:weightSum="3">

        <!-- 倒退鍵 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/ibBack"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/back_arrow_green"
                android:background="#00000000"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <!-- 標題 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimaryLightBlack"
                android:textSize="17dp"
                android:text="個人資訊" />
        </LinearLayout>

        <!-- 編輯鍵 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center">

            <!--<ImageButton-->
                <!--android:id="@+id/edit_ib"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="match_parent"-->
                <!--app:srcCompat="@drawable/edit_green"-->
                <!--android:background="#00000000"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:scaleType="fitXY"-->
                <!--android:layout_marginRight="15dp"/>-->
        </LinearLayout>

    </LinearLayout>

    <!-- avatar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/colorPrimaryWhite">

        <ImageView
            android:id="@+id/userinfo_avatar_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/avatar"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="皮卡丘"/>

    </LinearLayout>

    <!-- user profile list card -->
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/userProfileList_cv"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        card_view:cardCornerRadius="30dp"
        app:cardElevation="8dp">

        <!-- list -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="8"
            android:orientation="vertical">

            <!-- 身高 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:background="@drawable/bottom_line">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/height_icon"/>
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="身高"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tvUserHeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="16dp"
                        android:text="170 公分"/>
                </LinearLayout>

            </LinearLayout>


            <!-- 體重 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:background="@drawable/bottom_line">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/weight_icon"/>
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="體重"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tvUserWeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="16dp"
                        android:text="60 公斤"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 年齡 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:background="@drawable/bottom_line">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/age_icon"/>
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="年齡"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tvUserAge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="16dp"
                        android:text="52 歲"/>
                </LinearLayout>

            </LinearLayout>

            <!-- bmi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:background="@drawable/bottom_line">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/bmi_icon" />
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="bmi"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tvUserBmi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="16dp"
                        android:text="16.5"/>
                </LinearLayout>

            </LinearLayout>
            <!-- 血壓紀錄 -->
            <LinearLayout
                android:id="@+id/llUserBloodPressure"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/bottom_line">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/blood_pressure_icon"/>
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="血壓紀錄"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="16dp"
                        android:text=">"/>
                </LinearLayout>

            </LinearLayout>
            <!-- 病史紀錄 -->
            <LinearLayout
                android:id="@+id/llUserDisease"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:background="@drawable/bottom_line"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/history_icon"/>
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="病史紀錄"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="18dp"
                        android:text=">"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 生活習慣 -->
            <LinearLayout
                android:id="@+id/llUserHabit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/bottom_line">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/life_icon"/>
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="生活習慣"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="18dp"
                        android:text=">"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 分享資訊 -->
            <LinearLayout
                android:id="@+id/llUserShare"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="12"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/share_icon"/>
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="分享資訊"/>

                </LinearLayout>

                <!-- value or function -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="18dp"
                        android:text=">"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>